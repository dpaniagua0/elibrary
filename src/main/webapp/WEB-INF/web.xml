<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
      classpath:/mx/edu/uvaq/elibrary/spring/application-beans.xml
      classpath:/mx/edu/uvaq/elibrary/spring/application-dao.xml
      classpath:/mx/edu/uvaq/elibrary/spring/application-service.xml
      classpath:/mx/edu/uvaq/elibrary/spring/application-web.xml
    </param-value>
  </context-param>
  <!--    <context-param>
      <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
      <param-value>mx.edu.uvaq.elibrary.i18n.messages</param-value>
  </context-param>-->
  <context-param>
    <param-name>db.tcpServer</param-name>
    <param-value>-tcpAllowOthers</param-value>
  </context-param>
  <listener>
    <listener-class>org.h2.server.web.DbStarter</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>mx.edu.uvaq.elibrary.web.listener.SpringWebApplicationContextListener</listener-class>
  </listener>
  <filter>
    <filter-name>FlashScopeFilter</filter-name>
    <filter-class>mx.edu.uvaq.elibrary.web.filter.FlashScopeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FlashScopeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>BookFormFilter</filter-name>
    <filter-class>mx.edu.uvaq.elibrary.web.filter.BookFormFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>BookFormFilter</filter-name>
    <servlet-name>bookLoad-controller</servlet-name>
  </filter-mapping>
  <servlet>
    <servlet-name>ElibraryFrontController</servlet-name>
    <servlet-class>mx.edu.uvaq.elibrary.presentation.controller.ElibraryFrontController</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ElibraryFrontController</servlet-name>
    <url-pattern>/admin/autores/*</url-pattern>
    <url-pattern>/admin/editoriales/*</url-pattern>
    <url-pattern>/admin/categorias/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>vista-registro</servlet-name>
    <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>vista-usuarios</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/users.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>vista-categorias</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/categories.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>vista-inicio</servlet-name>
    <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>vista-inicio-administracion</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/index.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>register-controller</servlet-name>
    <servlet-class>mx.edu.uvaq.elibrary.presentation.controller.RegisterController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout-controller</servlet-name>
    <servlet-class>mx.edu.uvaq.elibrary.presentation.controller.LogoutController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>bookLoad-controller</servlet-name>
    <servlet-class>mx.edu.uvaq.elibrary.presentation.controller.BookLoadController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register-controller</servlet-name>
    <url-pattern>/registro</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>users-controller</servlet-name>
    <servlet-class>mx.edu.uvaq.elibrary.presentation.controller.UsersController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>users-controller</servlet-name>
    <url-pattern>/admin/usuarios</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>books-controller</servlet-name>
    <servlet-class>mx.edu.uvaq.elibrary.presentation.controller.BooksController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>books-controller</servlet-name>
    <url-pattern>/inicio</url-pattern>
  </servlet-mapping>
  <!--    <servlet>
      <servlet-name>controlador-inicio</servlet-name>
      <servlet-class>mx.edu.uvaq.elibrary.presentation.controller.HomeControllerervlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>controlador-inicio</servlet-name>
      <url-pattern>/inicio</url-pattern>
  </servlet-mapping>-->
  <servlet-mapping>
    <servlet-name>jsp</servlet-name>
    <url-pattern>*.jspf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout-controller</servlet-name>
    <url-pattern>/inicio/cerrar-sesion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>bookLoad-controller</servlet-name>
    <url-pattern>/admin/cargar-libro</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/WEB-INF/jsp/login.jsp</form-login-page>
      <form-error-page>/WEB-INF/jsp/login.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
    <role-name>administrador</role-name>
  </security-role>
  <security-role>
    <role-name>estudiante</role-name>
  </security-role>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>paginas-users</web-resource-name>
      <description/>
      <url-pattern>/inicio</url-pattern>
      <url-pattern>/inicio/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>paginas-administrativas</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>administrador</role-name>
    </auth-constraint>
  </security-constraint>
</web-app>
