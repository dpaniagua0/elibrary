<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>

<properties>
  <entry key="authors.query.encontrarAutoresDeLibro">
    <![CDATA[
      SELECT a.id, a.name, a.lastName
      FROM Libro_Autor la 
      JOIN Autor a 
      ON a.id = la.id_autor AND la.id_libro = :id 
      ORDER BY a.name
    ]]>
  </entry>
  <entry key="authors.query.encontrarAutores">
    <![CDATA[
      SELECT * FROM Autor a ORDER BY a.name
    ]]>
  </entry>
  <entry key="authors.query.insertarAutor">
    <![CDATA[
      INSERT INTO Autor (name, lastName) VALUES(:name, :lastName)
    ]]>
  </entry>
  <entry key="authors.query.encontrarAutor">
    <![CDATA[
     SELECT a.name, a.lastName FROM Autor a WHERE a.`id` = :id
    ]]>
  </entry>
  <entry key="authors.query.actualizarAutor">
    <![CDATA[
     UPDATE Autor SET name = :name, lastName = :lastName WHERE `id` = :id
    ]]>
  </entry>
  <entry key="authors.query.eliminarAutor">
    <![CDATA[
     DELETE FROM Autor WHERE `id` = :id
    ]]>
  </entry>
</properties>
