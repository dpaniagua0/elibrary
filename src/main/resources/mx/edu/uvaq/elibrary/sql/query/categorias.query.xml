<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>

<properties>
  <entry key="categorias.query.encontrarCategoriasDeLibro">
    <![CDATA[
      SELECT c.id, c.nombre 
      FROM Libro_Categoria lc 
      JOIN Categoria c 
      ON c.id = lc.id_categoria AND lc.id_libro = :id_libro 
      ORDER BY c.nombre
    ]]>
  </entry>
  <entry key="categorias.query.encontrarCategorias">
    <![CDATA[
      SELECT c.id,c.nombre FROM Categoria c ORDER BY c.nombre
    ]]>
  </entry>
  <entry key="categorias.query.encontrarCategoria">
    <![CDATA[
     SELECT c.nombre FROM Categoria c WHERE c.`nombre` = :nombre
    ]]>
  </entry>
  <entry key="categorias.query.insertarCategoria">
    <![CDATA[
      INSERT INTO
        Categoria (nombre)
      VALUES (:nombre)
    ]]>
  </entry>
</properties>
