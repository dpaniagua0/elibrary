<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>

<properties>
  <entry key="categories.query.encontrarCategoriasDeLibro">
    <![CDATA[
      SELECT c.id, c.name
      FROM Libro_Categoria lc 
      JOIN Categoria c 
      ON c.id = lc.id_categoria AND lc.id_libro = :id_libro 
      ORDER BY c.name
    ]]>
  </entry>
  <entry key="categories.query.encontrarCategorias">
    <![CDATA[
      SELECT c.id,c.name FROM Categoria c ORDER BY c.name
    ]]>
  </entry>
  <entry key="categories.query.encontrarCategoria">
    <![CDATA[
     SELECT c.name FROM Categoria c WHERE c.`name` = :name
    ]]>
  </entry>
  <entry key="categories.query.insertarCategoria">
    <![CDATA[
      INSERT INTO
        Categoria (name)
      VALUES (:name)
    ]]>
  </entry>
</properties>
