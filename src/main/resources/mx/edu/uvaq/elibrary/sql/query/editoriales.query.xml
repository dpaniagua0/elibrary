<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>

<properties>
  <entry key="publishers.query.encontrarEditorialesDeLibro">
    <![CDATA[
    SELECT e.id, e.name
    FROM Libro_Editorial le 
    JOIN Editorial e 
    ON e.id = le.id_editorial AND le.id_libro = :id_libro 
    ORDER BY e.name
    ]]>
  </entry>
  <entry key="publishers.query.encontrarEditoriales">
    <![CDATA[
    SELECT * FROM Editorial e ORDER BY e.name
    ]]>
  </entry>
  <entry key="publishers.query.insertarEditorial">
    <![CDATA[
      INSERT INTO Editorial (name) VALUES (:name)
    ]]>
  </entry>
  <entry key="publishers.query.encontrarEditorial">
    <![CDATA[
    SELECT e.id, e.name FROM Editorial e WHERE e.`id` = :id
    ]]>
  </entry>
  <entry key="publishers.query.actualizarEditorial">
    <![CDATA[
     UPDATE Editorial SET name = :name WHERE `id` = :id
    ]]>
  </entry>
  <entry key="publishers.query.eliminarEditorial">
    <![CDATA[
      DELETE FROM Editorial where `id` = :id 
    ]]>
  </entry>
</properties>
