<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="dataSource"
        class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    <property name="driverClassName" value="${jdbc.driverClassName}"/>
    <property name="url" value="${jdbc.url}"/>
    <property name="username" value="${jdbc.username}"/>
    <property name="password" value="${jdbc.password}"/>
  </bean>

  <bean id="querysLibro" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.query.QueryCollection">
    <property name="querys">
      <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:mx/edu/uvaq/elibrary/sql/query/libros.query.xml"/>
      </bean>
    </property>
  </bean>

  <bean id="querysUsuario" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.query.QueryCollection">
    <property name="querys">
      <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:mx/edu/uvaq/elibrary/sql/query/usuarios.query.xml"/>
      </bean>
    </property>
  </bean>

  <bean id="querysCategoria" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.query.QueryCollection">
    <property name="querys">
      <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:mx/edu/uvaq/elibrary/sql/query/categorias.query.xml"/>
      </bean>
    </property>
  </bean>

  <bean id="querysAutor" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.query.QueryCollection">
    <property name="querys">
      <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:mx/edu/uvaq/elibrary/sql/query/autores.query.xml"/>
      </bean>
    </property>
  </bean>

  <bean id="querysEditorial" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.query.QueryCollection">
    <property name="querys">
      <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:mx/edu/uvaq/elibrary/sql/query/editoriales.query.xml"/>
      </bean>
    </property>
  </bean>

  <bean id="querysSerie" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.query.QueryCollection">
    <property name="querys">
      <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="classpath:mx/edu/uvaq/elibrary/sql/query/series.query.xml"/>
      </bean>
    </property>
  </bean>

  <bean id="usuarioDao" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.JdbcUserDao">
    <property name="dataSource" ref="dataSource"/>
    <property name="querys" ref="querysUsuario"/>
  </bean>

  <bean id="libroDao" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.JdbcBookDao">
    <property name="dataSource" ref="dataSource"/>
    <property name="querys" ref="querysLibro"/>
  </bean>

  <bean id="categoriaDao" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.JdbcCategoryDao">
    <property name="dataSource" ref="dataSource"/>
    <property name="querys" ref="querysCategoria"/>
  </bean>

  <bean id="autorDao" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.JdbcAuthorDao">
    <property name="dataSource" ref="dataSource"/>
    <property name="querys" ref="querysAutor"/>
  </bean>

  <bean id="editorialDao" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.JdbcPublisherDao">
    <property name="dataSource" ref="dataSource"/>
    <property name="querys" ref="querysEditorial"/>
  </bean>

  <bean id="serieDao" class="mx.edu.uvaq.elibrary.model.persistence.dao.jdbc.JdbcBookSeriesDao">
    <property name="dataSource" ref="dataSource"/>
    <property name="querys" ref="querysSerie"/>
  </bean>
</beans>
